%{

#include <stdio.h>
#include "util.h"
#include "errormsg.h"
#include "absyn.h"

A_exp absyn_root;

int yylex(void); /* function prototype */

void yyerror(char *s)
{
 EM_error(EM_tokPos, "%s", s);
}

%}

/* */
/* union used for the variable $$, $1, $2, $3, ... */
/* */
%union {
	int pos;
	int ival;
	string sval;
    A_dec a_dec;
    A_exp a_exp;
    A_expList a_explist;
    A_var a_var;
    A_decList a_declist;
    A_ty a_ty;
    A_fieldList a_fieldlist;
    A_field a_field;
    A_efield a_efield;
    A_efieldList a_efieldlist;
	}

/* */
/* Define which rule uses which field of the union */
/* */
%type <a_dec> dec
%type <a_dec> vardec
%type <a_dec> tydec

%type <a_exp> exp
%type <a_exp> lvalue
%type <a_exp> nil
%type <a_exp> arithmetic
%type <a_exp> comparison
%type <a_exp> boolean_operators
%type <a_exp> if_then_else
%type <a_exp> if_then
%type <a_exp> while
%type <a_exp> assignment
%type <a_exp> for
%type <a_exp> no_value
%type <a_exp> let
%type <a_exp> array_indexing
%type <a_exp> array_creation
%type <a_exp> record_creation
/* %type <a_exp> record_creation_assignment */

%type <a_efield> record_creation_assignment
%type <a_efieldlist> record_creation_assignments

%type <a_declist> decs

%type <a_fieldlist> tyfields
%type <a_field> tyfield

%type <a_explist> sequencing
%type <a_explist> expseq
/* %type <a_explist> record_creation_assignments */

%type <a_ty> ty

/* */
/* the list of all token */
/* */
%token <sval> ID STRING
%token <ival> INT
%token 
  COMMA COLON SEMICOLON LPAREN RPAREN LBRACK RBRACK 
  LBRACE RBRACE DOT 
  PLUS MINUS TIMES DIVIDE EQ NEQ LT LE GT GE
  AND OR ASSIGN
  ARRAY IF THEN ELSE WHILE FOR TO DO LET IN END OF 
  BREAK NIL
  FUNCTION VAR TYPE 

/* */
/* operator precedence */
/* */

/* https://www-h.eng.cam.ac.uk/help/tpl/languages/flexbison/ *
/* Define operator reduction to get rid of shift/reduce conflicts 
%left PLUS MINUS
%left TIMES DIVIDE

%left EQ 
%left NEQ 
%left LT 
%left LE 
%left GT 
%left GE
*/

/* stolen from https://github.com/FlexW/tiger-compiler/blob/master/src/tiger_grm.y */
%nonassoc DO OF
%nonassoc THEN /* ELSE must come after THEN! */
%nonassoc ELSE
%left SEMICOLON
%left ASSIGN
%left OR
%left AND
%nonassoc EQ NEQ GT LT GE LE
%left PLUS MINUS
%left TIMES DIVIDE
%left UMINUS

/* define the start symbol */
%start program

%%

// Tiger programs do not have arguments: a program is just an expression exp.
program : exp { printf("program - exp\n"); absyn_root = $1; }
        ;

exp : lvalue { printf("exp - lvalue\n"); $$ = $1; printf("exp - lvalue kind: %d\n", $$->kind); }
//  | valueless_expression
    | nil { $$ = $1; }
    | sequencing { printf("exp - sequencing\n"); $$ = $1; }
    | no_value { $$ = $1; }
    | INT { $$ = A_IntExp(0, $1); }
    | STRING { $$ = A_StringExp(0, $1); }
//  | negation
    | function_call
    | arithmetic { $$ = $1; }
    | comparison { $$ = $1; }
//  | string_comparison
    | boolean_operators { $$ = $1; }
//  | precedence_of_operators
//  | associativity_of_operators
    | record_creation { $$ = $1; }
    | array_creation { printf("array_creation\n"); /*$$ = $1;*/ }
//  | array_and_record_assignment
//  | extent
    | assignment { $$ = $1; }
    | if_then_else { $$ = $1; }
    | if_then { $$ = $1; }
    | while { $$ = $1; }
    | for { $$ = $1; }
    | break
    | let { $$ = $1; }
//    | parenthesis
    ;

lvalue : ID { 
            printf("lvalue - ID\n"); 
            $$ = A_VarExp(0, A_SimpleVar(0, S_Symbol($1)));
            printf("lvalue - ID kind: %d\n", $$->kind);
            } // variable

       | lvalue DOT ID { 

            printf("lvalue - DOT ID\n");

            printf("lvalue - DOT ID lvalue kind: %d\n", $1->kind);
            printf("lvalue - DOT ID lvalue kind: %d\n", $1->u.var->kind);
            printf("lvalue - DOT ID lvalue kind: %d\n", $1->u.var->u.simple);

            //$$ = A_VarExp(0, A_FieldVar(0, $1, $3));
            $$ = A_VarExp(0, A_FieldVar(0, $1->u.var, S_Symbol($3)));
            //$$ = A_VarExp(0, A_FieldVar(0, A_SimpleVar($1), $3));
            //$$ = A_VarExp(0, A_FieldVar(0, A_SimpleVar(0, $1), $3));
            //$$ = A_VarExp(0, A_FieldVar(0, A_SimpleVar(0, $1->u.var.symbol), $3));

         } // record field
       | lvalue array_indexing {

            printf("lvalue - array_indexing\n");

            //$$ = A_VarExp(0, A_SimpleVar(0, S_Symbol($1)));
            //$$ = A_ArrayExp(0, A_SimpleVar(0, S_Symbol($1)), $2, NULL);

            printf("LUL %d\n", $1->kind);

            if ($1->kind == A_varExp) {
                printf("LUL\n");

                //$$ = A_SubscriptVar(0, S_Symbol($1), $2);
                //$$ = A_SubscriptVar(0, S_Symbol($1->u.var->u.simple), $2);
                //$$ = A_SubscriptVar(0, S_Symbol($1->u.var), $2);
                //$$ = A_SubscriptVar(0, $1->u.var, $2);
                //$$ = A_SubscriptVar(0, $1->u.var, $2);
                //$$ = A_SubscriptVar(0, $1, $2);

                $$ = A_VarExp(0, A_SubscriptVar(0, $1->u.var, $2));
            }

        } // array subscript
       ;

nil : NIL { $$ = A_NilExp(0); }
    ;

sequencing : LPAREN expseq RPAREN { printf("sequencing 1\n"); $$ = A_SeqExp(0, $2); }
           ;

no_value : LPAREN RPAREN { printf("no_value\n"); $$ = A_NilExp(0); }
         ;

function_call : ID LPAREN RPAREN
              | ID LPAREN expseq_comma RPAREN
              ;

arithmetic : exp PLUS exp { $$ = A_OpExp(0, A_plusOp, $1, $3); }
           | exp MINUS exp { $$ = A_OpExp(0, A_minusOp, $1, $3); }
           | exp TIMES exp { $$ = A_OpExp(0, A_timesOp, $1, $3); }
           | exp DIVIDE exp { $$ = A_OpExp(0, A_divideOp, $1, $3); }
           | MINUS exp %prec UMINUS
           ;

comparison : exp EQ exp { $$ = A_OpExp(0, A_eqOp, $1, $3); }
           | exp NEQ exp { $$ = A_OpExp(0, A_neqOp, $1, $3); }
           | exp LT exp { $$ = A_OpExp(0, A_ltOp, $1, $3); }
           | exp LE exp { $$ = A_OpExp(0, A_leOp, $1, $3); }
           | exp GT exp { $$ = A_OpExp(0, A_gtOp, $1, $3); }
           | exp GE exp { $$ = A_OpExp(0, A_geOp, $1, $3); }
           ;

boolean_operators : exp AND exp { $$ = A_OpExp(0, A_andOp, $1, $3); }
                  | exp OR exp { $$ = A_OpExp(0, A_orOp, $1, $3); }
                  ;

record_creation : ID LBRACE record_creation_assignments RBRACE { printf("record_creation\n"); 
                    $$ = A_RecordExp(0, S_Symbol($1), $3); 
                }
                ;

record_creation_assignments : %empty { $$ = NULL; }
                            | record_creation_assignment { printf("record_creation_assignments 1\n"); 
                                //$$ = A_ExpList($1, NULL);
                                $$ = A_EfieldList($1, NULL);
                                }
                            | record_creation_assignment COMMA record_creation_assignments { printf("record_creation_assignments 2\n"); 
                                //$$ = A_ExpList($1, $3);
                                $$ = A_EfieldList($1, $3);
                                }
                            ;

record_creation_assignment : ID EQ exp { 
                                printf("record_creation_assignment\n");
                                //$$ = A_AssignExp(0, A_VarDec(0, S_Symbol($1)), $3);
                                $$ = A_AssignExp(0, A_SimpleVar(0, S_Symbol($1)), $3);

                                $$ = A_Efield(S_Symbol($1), $3);
                            }
                           ;

array_creation : lvalue array_indexing OF exp { 
                        printf("array_creation\n");
                        //$$ = A_ArrayExp(0, S_Symbol($1), $2, $4); // works
                        //$$ = A_ArrayExp(0, $1, $2, $4);

                        printf("kindd: %d\n", $1->kind);
                        printf("vall: %s\n", $1->u.var->u.simple);

                        //$$ = A_ArrayExp(0, S_Symbol($1->u.var->u.simple), $2, $4);
                        $$ = A_ArrayExp(0, $1->u.var->u.simple, $2, $4);
                    }
               ;

array_indexing : LBRACK exp RBRACK { 
                    $$ = $2;
                    //$$ = A_SubscriptVar(0, );
                    }
               ;

assignment : lvalue ASSIGN exp 
             { 
                $$ = A_AssignExp(0, $1->u.var, $3);
             }
           ;

if_then_else : IF exp THEN exp ELSE exp { $$ = A_IfExp(0, $2, $4, $6); }
             ;

if_then : IF exp THEN exp { $$ = A_IfExp(0, $2, $4, NULL); }
        ;

while : WHILE exp DO exp { $$ = A_WhileExp(0, $2, $4); }
      ;

for : FOR assignment TO exp DO exp 
    { 
        $$ = A_ForExp(0, S_Symbol($2->u.assign.var), $2->u.assign.exp, $4, $6);
    }
    ;

break : BREAK
      ;

let : LET decs IN expseq END {

        // A_exp A_LetExp(A_pos pos, A_decList decs, A_exp body);
        //$$ = A_LetExp(0, $2, $4);

        // A_exp A_SeqExp(A_pos pos, A_expList seq);
        $$ = A_LetExp(0, $2, A_SeqExp(0, $4));
    }
    ;

// A declaration-sequence is a sequence of type, value, and function declarations; 
// no punctuation separates or terminates individual declarations.
decs : dec { $$ = A_DecList($1, NULL); }
     | dec decs { $$ = A_DecList($1, $2); }
     ;

dec : tydec { $$ = $1; }
    | vardec { $$ = $1; }
    | fundec
    ;

tydec : TYPE ID EQ ty { $$ = A_TypeDec(0, A_NametyList(A_Namety(S_Symbol($2), $4), NULL)); }
      ;

ty : ID { $$ = A_NameTy(0, S_Symbol($1)); }
   | LBRACE tyfields RBRACE { $$ = A_RecordTy(0, $2); }
   | ARRAY OF ID { $$ = A_ArrayTy(0, S_Symbol($3)); }
   ;

tyfields : tyfield { $$ = A_FieldList($1, NULL); }
         | tyfield COMMA tyfields { $$ = A_FieldList($1, $3); }
         ;

tyfield : ID COLON ID { $$ = A_Field(0, S_Symbol($1), S_Symbol($3)); }
        ;

expseq : 
       exp { printf("expseq 2\n"); $$ = A_ExpList($1, NULL); }
       | 
       exp SEMICOLON expseq { printf("expseq 3\n"); $$ = A_ExpList($1, $3); }
       ;

expseq_comma : exp
             | expseq_comma COMMA exp
             ;

// A_dec A_VarDec(A_pos pos, S_symbol var, S_symbol typ, A_exp init)
vardec : VAR ID ASSIGN exp { 
            printf("vardec - A\n"); 
            //$$ = A_VarDec(0, S_Symbol($2), S_Symbol($2), $4);
            $$ = A_VarDec(0, S_Symbol($2), NULL, $4); 
        }
       | 
       VAR ID COLON ID ASSIGN exp 
       { 
            printf("vardec - B\n"); 
            $$ = A_VarDec(0, S_Symbol($2), S_Symbol($4), $6); 
        }
       //| VAR ID COLON ASSIGN ID array_creation 
       ;

fundec : FUNCTION ID LPAREN tyfields RPAREN EQ exp
       | FUNCTION ID LPAREN tyfields RPAREN COLON ID EQ exp
       ;
